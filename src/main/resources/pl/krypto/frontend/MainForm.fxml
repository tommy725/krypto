    <Button layoutX="195.0" layoutY="85.0" mnemonicParsing="false" onAction="#encrypt" prefHeight="25.0"
            prefWidth="100.0" text="Szyfruj -&gt;"/>
    <Button layoutX="305.0" layoutY="85.0" mnemonicParsing="false" onAction="#decrypt" prefHeight="25.0"
            prefWidth="100.0" text="&lt;- Deszyfruj"/>
</Pane>
