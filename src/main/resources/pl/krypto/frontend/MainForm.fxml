    <Button layoutX="155.0" layoutY="50.0" mnemonicParsing="false" onAction="#writeKeyToFile" prefHeight="25.0"
            prefWidth="150.0" text="Zapisz klucz do pliku"/>
    <Button layoutX="310.0" layoutY="50.0" mnemonicParsing="false" onAction="#readKeyFromFile" prefHeight="25.0"
            prefWidth="150.0" text="Odczytaj klucz z pliku"/>
    <Button layoutX="20.0" layoutY="50.0" mnemonicParsing="false" onAction="#generateKey" prefHeight="25.0"
            prefWidth="130.0" text="Generuj klucz"/>

    <Button layoutX="480.0" layoutY="20.0" mnemonicParsing="false" onAction="#readFromFile" prefHeight="25.0"
            prefWidth="100.0" text="Wczytaj plik"/>
    <Button layoutX="480.0" layoutY="50.0" mnemonicParsing="false" onAction="#writeToFile" prefHeight="25.0"
            prefWidth="100.0" text="Zapisz do pliku"/>

    <Label alignment="CENTER_RIGHT" layoutX="480.0" layoutY="86.0" prefHeight="25.0" prefWidth="100.0"
           text="Szyfrogram"/>
    <TextArea fx:id="plainText" layoutX="20.0" layoutY="120.0" prefHeight="260.0" prefWidth="275.0"/>

    <Label alignment="CENTER_RIGHT" layoutX="480.0" layoutY="86.0" prefHeight="25.0" prefWidth="100.0"
